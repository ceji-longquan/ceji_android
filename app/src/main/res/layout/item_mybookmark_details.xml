<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="15dp"
              android:gravity="center"
              android:orientation="vertical"
              android:padding="10dp">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/book_icon"
            android:layout_width="26dp"
            android:layout_height="20dp"
            android:layout_gravity="left"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/my_bookmark_icon"/>

        <com.lqtemple.android.lqbookreader.view.TextContentTextView
            android:id="@+id/mark_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_alignParentRight="true"
            android:text="appName"/>

        <com.lqtemple.android.lqbookreader.view.TextContentTextView
            android:id="@+id/mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/book_icon"
            android:layout_toEndOf="@+id/book_icon"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <com.lqtemple.android.lqbookreader.view.TitleTextView
            android:id="@+id/min_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:textSize="21sp"
            android:text="第一章"/>

        <com.lqtemple.android.lqbookreader.view.TitleTextView
            android:id="@+id/min_title_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:textSize="21sp"
            android:text="修复身后"/>

    </LinearLayout>


    <com.lqtemple.android.lqbookreader.view.ContentTextView
        android:id="@+id/mark_content"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="学诚大和尚是中国佛教界的领军人物学诚大和尚是中国佛教界的领军人物学诚大和尚是中国佛教界的领军人物学诚大和尚是中国佛教界的领军人物"/>



</LinearLayout>