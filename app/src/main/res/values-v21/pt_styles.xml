<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LightFullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:colorPrimary">@android:color/background_dark</item>
    </style>

    <style name="DarkFullScreen" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionBarStyle">@style/Widget.MyTheme.ActionBar</item>
        <item name="android:colorPrimary">@android:color/background_dark</item>

    </style>
</resources>